@model NominasSAT.Models.Empleado

@{
    ViewBag.Title = "Detalle de empleado";
}

<h2>Empleado</h2>


<div class="container">

    <div class="row">
        <div class="col-xs-5">
            

            <img width="100px" height="100px" src='#' />


        </div>
        <div class="col-xs-7 text-right">
            <h1>@Html.DisplayFor(model => model.Nombre)</h1>
            <h1><small><span id="uuid">@Html.DisplayFor(model => model.Puesto)</span></small></h1>

        </div>
    </div>

    <div class="row">
        <div class="col-xs-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4><span id="EmisorName">Datos laborales</span></h4>
                </div>
                <div class="panel-body" id="EmisorDomicilio">
                    @Html.DisplayNameFor(model => model.NumdeEmpleado) :  @Html.DisplayFor(model => model.NumdeEmpleado)
                    <br />
                   
                    @Html.DisplayNameFor(model => model.SalarioDiario) : @Html.DisplayFor(model => model.SalarioDiario)
                    <br />
                    @Html.DisplayNameFor(model => model.SBC) : @Html.DisplayFor(model => model.SBC);
                    <br />
                    @Html.DisplayNameFor(model => model.FechaInicioLaboral) : @Html.DisplayFor(model => model.FechaInicioLaboral)
                    <br />
                    @Html.DisplayNameFor(model => model.Regimen) : @Html.DisplayFor(model => model.Regimen)
                    <br />
                    @Html.DisplayNameFor(model => model.Departamento) : @Html.DisplayFor(model => model.Departamento)
                    <br />
                   @Html.DisplayNameFor(model => model.Puesto) : @Html.DisplayFor(model => model.Puesto)
                    <br />
                    @Html.DisplayNameFor(model => model.TipoContrato) :  @Html.DisplayFor(model => model.TipoContrato)
                    <br />
                    @Html.DisplayNameFor(model => model.TipoJornada):  @Html.DisplayFor(model => model.TipoJornada)
                    <br />
                    @Html.DisplayNameFor(model => model.PeriodicidadPago) : @Html.DisplayFor(model => model.PeriodicidadPago)

                    <br />

                    @Html.DisplayNameFor(model => model.RiesgoPuesto) : @Html.DisplayFor(model => model.RiesgoPuesto)

                    <br />

                    @Html.DisplayNameFor(model => model.RFCPatron) : @Html.DisplayFor(model => model.RFCPatron)

                 

                </div>
            </div>
        </div>
        <div class="col-xs-6 col-xs-offset-0 text-left">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4><span id="ReceptorName">Datos personales</span></h4>
                </div>
                <div class="panel-body" id="ReceptorDomicilio">
                    @Html.DisplayNameFor(model => model.RFC) : @Html.DisplayFor(model => model.RFC)
                    <br />
                    @Html.DisplayNameFor(model => model.CURP) : @Html.DisplayFor(model => model.CURP)
                    <br />
                    @Html.DisplayNameFor(model => model.NumSeguroSocial) : @Html.DisplayFor(model => model.NumSeguroSocial)
                    <br />
                    @Html.DisplayNameFor(model => model.CLABE) : @Html.DisplayFor(model => model.CLABE)
                    <br />
                    @Html.DisplayNameFor(model => model.Banco) :  @Html.DisplayFor(model => model.Banco)
                    <br />
                    Domicilio: 
                    @Html.DisplayFor(model => model.Calle) 
                    @Html.DisplayFor(model => model.NumeroExterior) - @Html.DisplayFor(model => model.NumeroInterior) 
                    @Html.DisplayFor(model => model.Colonia) 
                    @Html.DisplayFor(model => model.Municipio)  
                    @Html.DisplayFor(model => model.Estado) 
                    @Html.DisplayFor(model => model.Pais) 
                    <br />
                    @Html.DisplayNameFor(model => model.Localidad) : @Html.DisplayFor(model => model.Localidad)
                    <br />
                    @Html.DisplayNameFor(model => model.CP) : @Html.DisplayFor(model => model.CP)
                   
                    <br />

                    @Html.DisplayNameFor(model => model.Email) : @Html.DisplayFor(model => model.Email)





                    

                    
                </div>
            </div>
        </div>
    </div> <!-- / end client details section -->

