gris_oscuro = #444

body
	
	background #E8E8E8
	color gris_oscuro
	font-family Arial
	font-size 16px
	//transition font-size 1s

header
	.logo		
		background gris_oscuro
		color rgba(255,255,255,0.5)
		//position absolute
		top 0
		width 100%		
		
	.titulo
		//padding-top 180px
		font-size 1.1em
		margin 0

article
	.descripcion
		font-size 1.2em
		margin 0
		padding 0 0 0.5em 0	
	.valores
		font-weight bold	
		display block
		position absolute	
		margin-left 30px		
	.resultados
		font-style italic
		margin-left 140px
footer
	background gris_oscuro
	color rgba(255,255,255,0.5)
	position absolute
	//position fixed
	bottom 0
	width 100%
	padding 1em 0
	h3
		font-size 14px
		text-align center	
		&:before
		&:after
			content " - "
	
		strong
			display block
				



	
